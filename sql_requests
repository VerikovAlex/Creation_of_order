The first task
SELECT "Couriers".login, COUNT("Orders".id) as orders_count
FROM "Couriers"
LEFT JOIN "Orders" ON "Couriers".id = "Orders"."courierId"
WHERE "Orders"."inDelivery"=true GROUP BY "Couriers".id;

The second task
SELECT track
 ,CASE
  WHEN "finished" = true
   THEN 2
  WHEN cancelled = true
   THEN -1
  WHEN "inDelivery" = true
   THEN 1
  ELSE 0
  END AS status
FROM "Orders";

